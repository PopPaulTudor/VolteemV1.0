<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusableInTouchMode="true"
    tools:context="com.volunteer.thc.volunteerapp.presentation.organiser.OrganiserProfileFragment">

    <ProgressBar
        android:id="@+id/indeterminateBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp" />

    <View
        android:id="@+id/volunteer_backimage"
        android:layout_width="match_parent"
        android:layout_height="120sp"
        android:background="@color/green" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/photo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/volunteer_logo"
        app:civ_border_color="@color/colorPrimary"
        app:civ_border_overlay="true"
        app:civ_border_width="2dp"
        android:layout_marginTop="65dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/photo">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/edit_company"
                android:layout_alignBottom="@+id/edit_company"
                android:layout_alignStart="@+id/text_email"
                android:text="Company: "
                android:textColor="@android:color/black"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/text_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/text_company"
                android:layout_marginStart="10sp"
                android:layout_marginTop="46sp"
                android:text="Email: "
                android:textColor="@android:color/black"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/text_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/edit_phone"
                android:layout_alignBottom="@+id/edit_phone"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/text_email"
                android:layout_marginStart="10sp"
                android:text="Phone: "
                android:textColor="@android:color/black"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/text_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/edit_city"
                android:layout_alignBottom="@+id/edit_city"
                android:layout_alignParentStart="true"
                android:layout_below="@id/text_phone"
                android:layout_marginStart="10sp"
                android:text="City: "
                android:textColor="@android:color/black"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/edit_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp"
                android:layout_toEndOf="@+id/text_company"
                android:ems="10"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/edit_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/text_email"
                android:layout_alignBottom="@+id/text_email"
                android:layout_alignStart="@+id/edit_phone"
                android:ems="10"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/edit_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edit_email"
                android:layout_toEndOf="@+id/text_phone"
                android:ems="10"
                android:maxLength="13"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:inputType="phone" />

            <EditText
                android:id="@+id/edit_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/edit_phone"
                android:layout_below="@+id/edit_phone"
                android:ems="10"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:inputType="textPersonName" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
