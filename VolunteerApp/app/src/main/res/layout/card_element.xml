<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <android.support.v7.widget.CardView
        android:id="@+id/CardElement"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/ImageCardElement"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/rectangle"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <ImageView
                android:id="@+id/card_text_back"
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:background="@color/card_back"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                />
            <ImageView
                android:id="@+id/card_location_back"
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:background="@color/card_back"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/NameCardElement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5sp"
                android:hint="Electric Castle 2017"
                android:textColor="@color/black"
                android:layout_alignTop="@+id/card_text_back"
                android:layout_alignParentStart="true" />


            <TextView
                android:id="@+id/DateCardElement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/NameCardElement"
                android:textColor="@color/black"
                android:layout_marginBottom="5sp"
                android:layout_marginStart="10sp"
                android:hint="13/07/17" />


            <TextView
                android:id="@+id/LocationCardElement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_alignTop="@+id/NameCardElement"
                android:layout_marginLeft="250dp"
                android:gravity="center"
                android:hint="Bontida"
                android:textAlignment="center" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>