<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:focusableInTouchMode="true"
    android:background="@drawable/background6"
    tools:context="com.volunteer.thc.volunteerapp.presentation.organiser.OrganiserSingleEventActivity">

    <ProgressBar
        android:id="@+id/indeterminateBar"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/RecViewOrgSearchableEvents"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/nothing_found_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:drawableTop="@drawable/ic_nothing_found"
        android:textSize="20sp"
        android:visibility="gone"
        android:layout_gravity="center"
        android:text="No results"/>

</android.support.design.widget.CoordinatorLayout>
